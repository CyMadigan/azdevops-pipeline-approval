{
  "manifestVersion": 1,
  "version": "0.0.1-Alpha",
  "name": "Azure Pipelines Approval",
  "description": "A short description of my extension",
  "publisher": "gustavobergamim",
  "demands": ["api-version/5.1"],
  "categories": ["Azure Pipelines"],
  "scopes": [
    "vso.agentpools",
    "vso.build",
    "vso.release_manage"
],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "content": {
    "details": {
      "path": "README.md"
    }
  },
  "icons": {
    "default": "img/server_accept.png"
  },
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "img",
      "addressable": true
    }
  ],
  "contributions": [
    {
      "id": "pipeline-approval-hub-group",
      "type": "ms.vss-web.hub-group",
      "description": "Azure Pipelines Approval Hub Group",
      "targets": ["ms.vss-build-web.build-release-hub-group"],
      "properties": {
        "name": "Hello World!",
        "icon": {
          "dark": "img/server_accept.svg",
          "light": "img/server_accept.svg"
        }
      }
    },
    {
      "id": "default-hub",
      "type": "ms.vss-web.hub",
      "targets": [".hello-world-hub-group"],
      "properties": {
        "uri": "dist/hub/hub.html"
      }
    }
  ]
}
